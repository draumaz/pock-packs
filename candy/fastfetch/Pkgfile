name=fastfetch
version=1.7.5
source=(https://github.com/LinusDierheimer/${name}/archive/refs/tags/${version}.tar.gz)

build() {

  cd ${name}-${version}
  mkdir build && cd build

  cmake ..
  cmake --build . \
    --target fastfetch \
    --target flashfetch \
    -j $JOBS

  make install DESTDIR="${PKG}/${POCK_SYS_PFX}"

  for i in etc usr/share; do
    rm -r "${PKG}"/$i
  done

}
